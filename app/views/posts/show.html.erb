<p id="notice"><%= notice %></p>

<%= render @post %>
<%= link_to '<button class="btn btn-default" role="button">Edit</button>'.html_safe, edit_post_path(@post) %> 
<%= link_to '<button class="btn btn-default" role="button">Destroy</button>'.html_safe, @post, method: :delete, data: { confirm: 'Are you sure?' } %>


<h3>Comments</h3>
<div id="comments">

<%= render @post.comments.reverse%>

</div>
<%= form_for [@post, Comment.new], remote: true do |f| %>
	<p>
	<%= f.hidden_field :post_id, :value => @post.id %>
	<%= f.label :body, "New Comments" %>
	<%= f.text_area :body %>
	

	</p>
	<p> <%= f.submit "Add Comment", :class => "btn btn-default" %></p>
<% end %>

<%= link_to '<button class="btn btn-default" role="button">Back</button>'.html_safe, posts_path %>

